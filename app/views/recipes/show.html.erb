  <%= link_to "Back to recipes", user_recipes_path %>
<div id="recipe-div">
  <h2 id="recipe-title">
    <%= @recipe.name %>
  </h2>
  <div id="recipe-information">
    <p>Preparation time: <%= @recipe.preparation_time %> horas</p>
    <p>Coocking time: <%= @recipe.cooking_time %> horas</p>
    <p id="precipe-public">public <span class="public <%= @recipe.public ? 'active' : '' %>"></span></p>
    <p>Description : <br>
      <%= @recipe.description %></p>
  </div>
</div>
<%# add functionality to generate shopping list %>
<%# <%= button_to "Destroy this recipe", user_recipe_path(@recipe), method: :delete %>
<div id="recipe-show-btns">
  <%= link_to 'Add Food',new_user_recipe_food_path(user_id: current_user, id: @recipe), class:"btn d-flex btn-primary"%>
</div>
<table  class="table table-striped table-bordered m-5 w-75">
  <thead>
    <tr>
      <th scope="col">Food </th>
      <th>Measurement unit </th>
      <th>Unit price </th>
      <th>Actions </th>
    </tr>
  </thead>
  <tbody>
    <% if @recipe.recipe_foods.length.positive? %>
      <% @recipe.recipe_foods.each do |food|%>
        <tr>
          <td> <%= food.name%></td>
          <td> <%= food.measurement_unit%></td>
          <td> $ <%= food.price%></td>
          <td><%= button_to 'delete', food_path(food.id), method: :delete, class:"btn btn-warning"%></td>
        </tr>
      <%end%>
    <% else %>
      <tr>
        <td>no</td>
        <td>recipe</td>
        <td>foods</td>
        <td>available</td>
      </tr>
    <% end %>
  </tbody>
</table>
