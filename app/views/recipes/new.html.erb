<section class="d-flex flex-column align-items-center justify-content-center w-50 mx-auto">
  <h1 class="text-center mb-5">Add a Recipe</h1>

    <%= form_with model: @recipe, url:recipes_path(@user, @recipe), method: :post, :html => {:class => "w-50 mt-4"} do |form| %>
      <div class="form-group mt-3">
        <%= form.text_field :name, class: "form-control", placeholder: "Recipe" %>
      </div>
      <div class="form-group mt-3">
        <%= form.text_field :preparation_time, class: "form-control", placeholder: "Preparation Time" %>
      </div>
      <div class="form-group mt-3">
        <%= form.text_field :cooking_time, class: "form-control", placeholder: "Cooking Time" %>
      </div>
      <div class="form-group mt-3">
        <%= form.text_area :description, class: "form-control", placeholder: "Description" %>
      </div>
      <div class="field form-control mt-3">
        <%= form.check_box(:public, { class: "form-check-input" }, true, false) %>
        <%= form.label "Public", class: "form-check-label" %>
    </div>
      <button type="submit" class="btn btn-primary mt-3">Submit</button>
    <% end %>

</section>