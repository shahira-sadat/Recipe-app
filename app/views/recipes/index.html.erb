<div class=" m-5 d-flex justify-content-between align-items-center w-75" >
  <h1>Recipes</h1>
  <%= link_to "New recipe", new_user_recipe_path, class:"btn d-flex btn-primary" %>
</div>
<ul class="recipe-ul">
  <% @recipes.each do |recipe| %>
    <li class="recipe-li">
      <div class="recipe-li-div">
        <%= link_to user_recipe_path(id: recipe), class: "recipe-link" do %>
          <h2> <%= recipe.name %></h2>
        <% end %>
        <%= button_to "remove recipe", user_recipe_path(user_id: current_user,id: recipe), method: :delete %>
      </div>
      <p class="recipe-p"><%= recipe.description %></p>
    </li>
  <%end%>
</ul>
