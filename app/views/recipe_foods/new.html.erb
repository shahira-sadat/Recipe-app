<section class="d-flex flex-column align-items-center w-50 mx-auto">
  <h1 class="text-center">Add ingredient</h1>
    <%= form_with url: user_recipe_recipe_foods_path(params[:recipe_id]), method: :post, :html => {:class => "w-50 mt-4"} do |form| %>
      <div class="form-group mt-3">
        <%= form.select :food_id, @foods.collect  {|food| [food.name, food.id]},{ include_blank: false}, class: "form-control", placeholder: "Recipe" %>
      </div>
      <div class="form-group mt-3">
        <%= form.number_field :quantity, class: "form-control", placeholder: "Quantity" %>
      </div>
      <button type="submit" class="btn btn-primary mt-3">Add</button>
    <% end %>
</section>
